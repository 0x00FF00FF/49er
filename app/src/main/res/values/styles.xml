    <style name="AppTheme" parent="Theme.MaterialComponents"/>

    <!--<style name="AppTheme.NoActionBar" parent="Theme.AppCompat.NoActionBar">-->
    <style name="AppTheme.NoActionBar" parent="Theme.MaterialComponents.NoActionBar">

        <item name="android:windowBackground">@drawable/background_app</item>

        <item name="colorPrimary">@color/pureWhite</item>
        <item name="colorOnPrimary">@color/indigo_100_blacked</item>
        <item name="colorPrimaryDark">@color/indigo_100_blacked</item>
        <item name="colorAccent">@color/pureWhite</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="textInputStyle">@style/Custom.Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>

        <!--toolbar overflow menu ... icon color-->
        <!--<item name="android:textColorSecondary">@android:color/white</item>-->

        <!-- Toolbar styles -->
        <item name="toolbarStyle">@style/Custom.Widget.Toolbar</item>
        <item name="toolbarNavigationButtonStyle">@style/Custom.Widget.Toolbar.Button.Navigation</item>

        <item name="actionOverflowButtonStyle">@style/Custom.Widget.ActionButton.Overflow</item>

        <!--<item name="windowActionModeOverlay">true</item>-->

        <!-- Action Mode styles -->
        <!--<item name="actionModeStyle">@style/Custom.Widget.ActionMode</item>-->
        <!--<item name="actionModeCloseButtonStyle">@style/Custom.Widget.ActionButton.CloseMode</item>-->

        <item name="android:textViewStyle">@font/futura_book_bt</item>
        <item name="android:buttonStyle">@font/futura_book_bt</item>

        <item name="fontFamily">@font/futura_book_bt</item>
        <item name="android:fontFamily" tools:ignore="NewApi">@font/futura_book_bt</item>

        <!--popup theme:-->
        <item name="android:popupMenuStyle">@style/Custom.PopupMenu</item>
        <item name="popupMenuStyle">@style/Custom.PopupMenu</item>

        <!--material fonts override-->

        <item name="textAppearanceHeadline1">@style/Custom.TextAppearance.MaterialComponents.Headline1</item>
        <item name="textAppearanceHeadline2">@style/Custom.TextAppearance.MaterialComponents.Headline2</item>
        <item name="textAppearanceHeadline3">@style/Custom.TextAppearance.MaterialComponents.Headline3</item>
        <item name="textAppearanceHeadline4">@style/Custom.TextAppearance.MaterialComponents.Headline4</item>
        <item name="textAppearanceHeadline5">@style/Custom.TextAppearance.MaterialComponents.Headline5</item>
        <item name="textAppearanceHeadline6">@style/Custom.TextAppearance.MaterialComponents.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/Custom.TextAppearance.MaterialComponents.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/Custom.TextAppearance.MaterialComponents.Subtitle2</item>
        <item name="textAppearanceBody1">@style/Custom.TextAppearance.MaterialComponents.Body1</item>
        <item name="textAppearanceBody2">@style/Custom.TextAppearance.MaterialComponents.Body2</item>
        <item name="textAppearanceCaption">@style/Custom.TextAppearance.MaterialComponents.Caption</item>
        <item name="textAppearanceButton">@style/Custom.TextAppearance.MaterialComponents.Button</item>
        <item name="textAppearanceOverline">@style/Custom.TextAppearance.MaterialComponents.Overline</item>

    </style>

    <style name="Custom.PopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/background_menu_drawable</item>
    </style>

    <style name="Custom.Widget.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="maxButtonHeight">48dp</item>
        <item name="android:paddingLeft">@dimen/toolbar_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/toolbar_horizontal_padding</item>
        <item name="contentInsetStart">@dimen/toolbar_first_keyline</item>
        <item name="android:background">@drawable/transient_semitransparent_rectangle_app_bar</item>
        <item name="titleTextColor">@color/pureWhite</item>
        <item name="subtitleTextColor">@color/pureWhite</item>
        <item name="popupTheme">@style/Custom.Widget.ActionButton.Overflow.Menu</item>
    </style>

    <style name="Custom.Widget.Toolbar.Button.Navigation" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:minWidth">48dp</item>
    </style>

    <style name="Custom.Widget.ActionButton.Overflow" parent="Widget.AppCompat.ActionButton.Overflow">
        <!--
        When navigation icon is used [contentInsetStart]
        value should be equal second keyline.
        It can be set as view/app attribute.                    -->
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
    </style>


