    <!--login forms-->
    <style name="LoginEditText">
        <item name="android:drawablePadding">8dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textColor">@color/indigo.100</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">text</item>
    </style>
    <style name="LoginEditText.Password" parent="LoginEditText">
        <item name="android:inputType">textPassword</item>
    </style>

    <!--forms text input-->
    <style name="Custom.Widget.MaterialComponents.TextInputLayout.OutlinedBox"
           parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <item name="boxStrokeColor">@color/color_selector_outline</item>
        <!--<item name="android:layout_margin">@dimen/sv_margin</item>-->
        <item name="hintTextAppearance">@style/Custom.TextAppearance.MaterialComponents.Hint</item>
        <item name="errorTextColor">@color/error_color</item>
        <item name="counterTextColor">@color/indigo.A100_grayed</item>
        <item name="counterOverflowTextColor">@color/error_color</item>
        <item name="android:textColorHint">@color/color_selector_hint</item>
        <item name="android:textColor">@color/color_selector_text</item>
        <item name="android:inputType">textNoSuggestions</item>
        <item name="android:singleLine">true</item>
        <item name="fontFamily">@font/futura_book_bt</item>
        <item name="android:fontFamily" tools:ignore="NewApi">@font/futura_book_bt</item>
    </style>

    <style name="Custom.Widget.MaterialComponents.TextInputLayout.OutlinedBox.Layout"
           parent="Custom.Widget.MaterialComponents.TextInputLayout.OutlinedBox"
    >
        <item name="android:layout_marginLeft">@dimen/sv_margin</item>
        <item name="android:layout_marginRight">@dimen/sv_margin</item>
        <item name="android:layout_marginStart">@dimen/sv_margin</item>
        <item name="android:layout_marginEnd">@dimen/sv_margin</item>
        <item name="fontFamily">@font/futura_book_bt</item>
        <item name="android:fontFamily" tools:ignore="NewApi">@font/futura_book_bt</item>
    </style>

    <style name="Custom.Widget.MaterialComponents.TextInputLayout.EditText" parent="Theme.AppCompat.Light">
        <!-- Inactive underline color-->
        <item name="colorControlNormal">@color/pureWhite</item>

        <!-- Cursor and Active underline color, uses colorAccent by default if not defined-->
        <item name="colorControlActivated">@color/projects.default.c9aac8</item>
        <!--<item name="editTextColor">@color/color_selector_hint</item>-->

        <item name="fontFamily">@font/futura_book_bt</item>
        <item name="android:fontFamily" tools:ignore="NewApi">@font/futura_book_bt</item>
    </style>

    <style name="Custom.TextAppearance.MaterialComponents.Hint" parent="TextAppearance.Design.Hint">
        <!-- Inactive and Active label color, pointing to a selector-->
        <item name="android:textColor">@color/color_selector_hint</item>
        <item name="fontFamily">@font/futura_book_bt</item>
        <item name="android:fontFamily" tools:ignore="NewApi">@font/futura_book_bt</item>
    </style>

    <style name="Custom.TextAppearance.MaterialComponents.Error" parent="TextAppearance.Design.Error">
