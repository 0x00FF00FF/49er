<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents"/>

    <!--<style name="AppTheme.NoActionBar" parent="Theme.AppCompat.NoActionBar">-->
    <style name="AppTheme.NoActionBar" parent="Theme.MaterialComponents.NoActionBar">

        <item name="android:windowBackground">@drawable/background_app</item>

        <item name="colorPrimary">@color/pureWhite</item>
        <item name="colorOnPrimary">@color/indigo_100_blacked</item>
        <item name="colorPrimaryDark">@color/indigo_100_blacked</item>
        <item name="colorAccent">@color/pureWhite</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="textInputStyle">@style/Custom.Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>

        <!--toolbar overflow menu ... icon color-->
        <!--<item name="android:textColorSecondary">@android:color/white</item>-->

        <!-- Toolbar styles -->
        <item name="toolbarStyle">@style/Custom.Widget.Toolbar</item>
        <item name="toolbarNavigationButtonStyle">@style/Custom.Widget.Toolbar.Button.Navigation</item>

        <item name="actionOverflowButtonStyle">@style/Custom.Widget.ActionButton.Overflow</item>

        <!--<item name="windowActionModeOverlay">true</item>-->

        <!-- Action Mode styles -->
        <!--<item name="actionModeStyle">@style/Custom.Widget.ActionMode</item>-->
        <!--<item name="actionModeCloseButtonStyle">@style/Custom.Widget.ActionButton.CloseMode</item>-->
    </style>

    <style name="Custom.Widget.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="maxButtonHeight">48dp</item>
        <item name="android:paddingLeft">@dimen/toolbar_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/toolbar_horizontal_padding</item>
        <item name="contentInsetStart">@dimen/toolbar_first_keyline</item>
        <item name="android:background">@drawable/transient_semitransparent_rectangle_app_bar</item>
        <item name="titleTextColor">@color/pureWhite</item>
        <item name="subtitleTextColor">@color/pureWhite</item>
        <item name="popupTheme">@style/Custom.Widget.ActionButton.Overflow.Menu</item>
    </style>

    <style name="Custom.Widget.Toolbar.Button.Navigation" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:minWidth">48dp</item>
    </style>

    <style name="Custom.Widget.ActionButton.Overflow" parent="Widget.AppCompat.ActionButton.Overflow">
        <!--
        When navigation icon is used [contentInsetStart]
        value should be equal second keyline.
        It can be set as view/app attribute.                    -->
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
    </style>


    <!--<style name="Custom.Widget.ActionMode" parent="Widget.AppCompat.ActionMode">-->
    <!--<item name="background">@drawable/transient_semitransparent_rectangle_app_bar</item>-->
    <!--<item name="titleTextColor">@color/pureWhite</item>-->
    <!--<item name="subtitleTextColor">@color/pureWhite</item>-->
    <!--<item name="android:paddingLeft">@dimen/toolbar_horizontal_padding</item>-->
    <!--<item name="android:paddingRight">@dimen/toolbar_horizontal_padding</item>-->
    <!--<item name="popupTheme">@style/Custom.Widget.ActionButton.Overflow.Menu</item>-->
    <!--</style>-->

    <!--<style name="Custom.Widget.ActionButton.CloseMode" parent="Widget.AppCompat.ActionButton.CloseMode">-->
    <!--<item name="android:layout_marginRight">20dp</item>-->
    <!--</style>-->

    <style name="Custom.Widget.ActionButton.Overflow.Menu" parent="ThemeOverlay.AppCompat">
        <!--<item name="android:windowBackground">@color/pink.100</item>-->
        <!--<item name="android:colorBackground">@color/pink.400</item>-->
        <!--<item name="colorBackgroundFloating">@color/villain.colorful.green</item>-->
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:background">@drawable/background_menu_drawable</item>
        <item name="android:textColor">@drawable/menu_text_color</item>

        <item name="overlapAnchor">true</item>
    </style>

    <style name="Custom_Toolbar_Title">
        <item name="android:textSize">@dimen/toolbar_title_text_size</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textColor">@color/pureWhite</item>
    </style>

    <style name="Custom_Toolbar_Title_Action">
        <item name="android:textSize">@dimen/toolbar_title_text_size</item>
        <item name="fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/pureWhite</item>
    </style>

    <style name="Custom_Toolbar_Subtitle">
        <item name="android:textSize">@dimen/toolbar_subtitle_text_size</item>
        <item name="fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/android_color_dim_foreground_dark</item>
    </style>

    <!--forms text input-->
    <style name="Custom.Widget.MaterialComponents.TextInputLayout.OutlinedBox"
           parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <item name="boxStrokeColor">@color/pureWhite</item>
        <!--<item name="android:layout_margin">@dimen/sv_margin</item>-->
        <item name="hintTextAppearance">@style/Custom.TextAppearance.MaterialComponents.Hint</item>
        <item name="android:textColorHint">@color/color_selector_hint</item>
    </style>

    <style name="Custom.Widget.MaterialComponents.TextInputLayout.OutlinedBox.Layout"
           parent="Custom.Widget.MaterialComponents.TextInputLayout.OutlinedBox"
    >
        <item name="android:layout_marginLeft">@dimen/sv_margin</item>
        <item name="android:layout_marginRight">@dimen/sv_margin</item>
        <item name="android:layout_marginStart">@dimen/sv_margin</item>
        <item name="android:layout_marginEnd">@dimen/sv_margin</item>
    </style>

    <style name="Custom.Widget.MaterialComponents.TextInputLayout.EditText" parent="Theme.AppCompat.Light">
        <!-- Inactive underline color-->
        <item name="colorControlNormal">@color/pureWhite</item>

        <!-- Cursor and Active underline color, uses colorAccent by default if not defined-->
        <item name="colorControlActivated">@color/projects.default.c9aac8</item>
    </style>

    <style name="Custom.TextAppearance.MaterialComponents.Hint" parent="TextAppearance.Design.Hint">
        <!-- Inactive and Active label color, pointing to a selector-->
        <item name="android:textColor">@color/color_selector_hint</item>
    </style>

    <style name="Custom.TextAppearance.MaterialComponents.Error" parent="TextAppearance.Design.Error">
        <!-- Error text color-->
        <item name="android:textColor">@color/error_color</item>
    </style>

    <style name="TempCardViewStyle" parent="CardView.Dark">
        <item name="cardBackgroundColor">@color/indigo.A100_grayed</item>
        <item name="cardCornerRadius">4dp</item>
    </style>

    <style name="TempCardViewStyle.Top" parent="TempCardViewStyle">
        <item name="android:layout_marginLeft">@dimen/sv_margin</item>
    </style>

    <style name="TempCardViewStyle.Bottom" parent="TempCardViewStyle">
        <item name="android:layout_marginLeft">@dimen/sv_margin</item>

        <item name="android:layout_marginTop">@dimen/sv_margin</item>
    </style>

    <style name="form_toolbar_header">
        <item name="android:layout_marginLeft">@dimen/sv_margin</item>
        <item name="android:layout_marginRight">@dimen/sv_margin</item>
        <item name="android:layout_marginStart">@dimen/sv_margin</item>
        <item name="android:layout_marginEnd">@dimen/sv_margin</item>
    </style>
</resources>