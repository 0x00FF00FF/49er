<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:top="@dimen/_list_item_invisible_margin" android:id="@+id/opaque_background">
        <shape android:shape="rectangle">
            <solid android:color="@color/indigo.300"/>
            <corners
                    android:topRightRadius="@dimen/_list_item_corner_radius_large"
                    android:bottomLeftRadius="@dimen/_list_item_corner_radius_large"
            />
        </shape>
    </item>
    <item android:top="@dimen/_list_item_invisible_margin" android:id="@+id/semitransparent_background">
        <shape
                android:shape="rectangle"
        >
            <corners
                    android:topRightRadius="@dimen/_list_item_corner_radius_large"
                    android:bottomLeftRadius="@dimen/_list_item_corner_radius_large"
            />
            <gradient
                    android:startColor="@color/semitransparent_black_left"
                    android:endColor="@color/semitransparent_black_right"
            />
        </shape>
    </item>
    <item android:top="@dimen/_list_item_invisible_margin" android:id="@+id/outside_stroke">
        <shape
                android:shape="rectangle"
        >
            <corners
                    android:topRightRadius="@dimen/_list_item_corner_radius_small"
                    android:bottomLeftRadius="@dimen/_list_item_corner_radius_small"
            />

            <stroke
                    android:width="@dimen/projects_list_item_background_stroke_width"
                    android:color="@color/indigo.100_grayed"
            />
        </shape>
    </item>
</layer-list>