<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners
                    android:bottomLeftRadius="100dp"
                    android:bottomRightRadius="100dp"
            />
            <size android:width="180dp"
                  android:height="90dp"/>
            <!--<gradient android:startColor="#9BA8EE"-->
            <gradient android:startColor="@color/indigo_100_grayed"
                      android:endColor="@color/indigo_100_blacked"
                      android:type="radial"
                      android:gradientRadius="100dp"
                      android:centerX="0.5"
                      android:centerY="0" />
            <stroke android:color="@color/pureWhite"
                    android:width="0dp"/>
        </shape>
    </item>
</layer-list>