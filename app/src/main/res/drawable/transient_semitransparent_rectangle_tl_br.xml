<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:top="2dp" android:left="2dp" android:right="2dp" android:id="@+id/opaque_background">
        <shape android:shape="rectangle">
            <solid android:color="@color/indigo.300"/>
            <corners
                    android:topLeftRadius="15dp"
                    android:bottomRightRadius="15dp"
            />
        </shape>
    </item>
    <item android:top="2dp" android:left="2dp" android:right="2dp" android:id="@+id/semitransparent_background">
        <shape
                android:shape="rectangle"
        >
            <corners
                    android:topLeftRadius="15dp"
                    android:bottomRightRadius="15dp"
            />
            <gradient
                    android:startColor="@color/semitransparent_black_left"
                    android:endColor="@color/semitransparent_black_right"
            />
        </shape>
    </item>
    <item android:top="2dp" android:left="2dp" android:right="2dp" android:id="@+id/outside_stroke">
        <shape
                android:shape="rectangle"
        >
            <corners
                    android:topLeftRadius="12dp"
                    android:bottomRightRadius="12dp"
            />

            <stroke
                    android:width="@dimen/projects_list_item_background_stroke_width"
                    android:color="@color/indigo.100_grayed"
            />
        </shape>
    </item>
</layer-list>