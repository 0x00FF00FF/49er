<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".domain.projects.ui.actions.edit.ProjectEditFormFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="54dp"
        android:id="@+id/project_edit_content_scroll"
        android:paddingTop="@dimen/projects_list_item_background_stroke_width"
        android:paddingBottom="@dimen/projects_list_item_background_stroke_width"
>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    >

        <androidx.constraintlayout.widget.Guideline
                android:id="@+id/project_edit_horizontal_guideline_top"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                app:layout_constraintGuide_begin="16dp"
        />

        <androidx.constraintlayout.widget.Guideline
                android:id="@+id/project_edit_horizontal_guideline_bottom"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintGuide_end="16dp"
                android:orientation="horizontal"
        />

        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/project_name_input_layout"
                app:layout_constraintTop_toBottomOf="@id/project_edit_horizontal_guideline_top"
                app:hintEnabled="true"
                app:hintAnimationEnabled="true"
                app:errorEnabled="true"
                style="@style/Custom.Widget.MaterialComponents.TextInputLayout.OutlinedBox.Layout"
        >
            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/project_name_input_layout_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_project_name"
                    style="@style/Custom.Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/project_short_name_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/project_name_input_layout"
                app:hintEnabled="true"
                app:hintAnimationEnabled="true"
                app:errorEnabled="true"
                style="@style/Custom.Widget.MaterialComponents.TextInputLayout.OutlinedBox.Layout"

        >
            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/project_short_name_input_layout_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_project_short_name"
                    style="@style/Custom.Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/project_description_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/project_short_name_input_layout"
                app:hintEnabled="true"
                app:hintAnimationEnabled="true"
                app:errorEnabled="true"
                style="@style/Custom.Widget.MaterialComponents.TextInputLayout.OutlinedBox.Layout"

        >
            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/project_description_input_layout_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_project_description"
                    style="@style/Custom.Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/project_icon_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/project_description_input_layout"
                app:hintEnabled="true"
                app:hintAnimationEnabled="true"
                app:errorEnabled="true"
                style="@style/Custom.Widget.MaterialComponents.TextInputLayout.OutlinedBox.Layout"

        >
            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/project_icon_input_layout_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_project_icon"
                    style="@style/Custom.Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/project_owner_input_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/project_icon_input_layout"
                app:hintEnabled="true"
                app:hintAnimationEnabled="true"
                app:errorEnabled="true"
                app:helperTextEnabled="false"
                style="@style/Custom.Widget.MaterialComponents.TextInputLayout.OutlinedBox.Layout"

        >
            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/project_owner_input_layout_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_project_owner"
                    style="@style/Custom.Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            />
        </com.google.android.material.textfield.TextInputLayout>

        <HorizontalScrollView
                android:id="@+id/users_scroll_view"
                android:paddingTop="56dp"
                android:paddingLeft="@dimen/sv_margin"
                android:paddingStart="@dimen/sv_margin"
                android:paddingRight="@dimen/sv_margin"
                android:paddingEnd="@dimen/sv_margin"
                android:paddingBottom="@dimen/sv_margin"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/project_owner_input_layout"
                android:background="@drawable/background_simple_outline"
        >
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                        android:id="@+id/v1"
                        android:layout_width="144dp"
                        android:layout_height="96dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        style="@style/TempCardViewStyle.Top"
                        android:layout_marginLeft="0dp"
                        android:layout_marginStart="0dp"
                />
                <androidx.cardview.widget.CardView
                        android:id="@+id/v2"
                        android:layout_width="144dp"
                        android:layout_height="96dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/v1"
                        style="@style/TempCardViewStyle.Bottom"
                        android:layout_marginLeft="0dp"
                        android:layout_marginStart="0dp"
                />
                <androidx.cardview.widget.CardView
                        android:id="@+id/v3"
                        android:layout_width="144dp"
                        android:layout_height="96dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/v1"
                        style="@style/TempCardViewStyle.Top"
                />
                <androidx.cardview.widget.CardView
                        android:id="@+id/v4"
                        android:layout_width="144dp"
                        android:layout_height="96dp"
                        app:layout_constraintStart_toEndOf="@id/v2"
                        app:layout_constraintTop_toBottomOf="@id/v3"
                        style="@style/TempCardViewStyle.Bottom"
                />
                <androidx.cardview.widget.CardView
                        android:id="@+id/v5"
                        android:layout_width="144dp"
                        android:layout_height="96dp"
                        app:layout_constraintStart_toEndOf="@id/v3"
                        app:layout_constraintTop_toTopOf="parent"
                        style="@style/TempCardViewStyle.Top"
                />
                <androidx.cardview.widget.CardView
                        android:id="@+id/v6"
                        android:layout_width="144dp"
                        android:layout_height="96dp"
                        app:layout_constraintStart_toEndOf="@id/v4"
                        app:layout_constraintTop_toBottomOf="@id/v5"
                        style="@style/TempCardViewStyle.Bottom"
                />
                <androidx.cardview.widget.CardView
                        android:id="@+id/v7"
                        android:layout_width="144dp"
                        android:layout_height="96dp"
                        app:layout_constraintStart_toEndOf="@id/v5"
                        app:layout_constraintTop_toTopOf="parent"
                        style="@style/TempCardViewStyle.Top"
                />
                <androidx.cardview.widget.CardView
                        android:id="@+id/v8"
                        android:layout_width="144dp"
                        android:layout_height="96dp"
                        app:layout_constraintStart_toEndOf="@id/v6"
                        app:layout_constraintTop_toBottomOf="@id/v7"
                        style="@style/TempCardViewStyle.Bottom"
                />
                <androidx.cardview.widget.CardView
                        android:id="@+id/v9"
                        android:layout_width="144dp"
                        android:layout_height="96dp"
                        app:layout_constraintStart_toEndOf="@id/v7"
                        app:layout_constraintTop_toTopOf="parent"
                        style="@style/TempCardViewStyle.Top"
                />
                <androidx.cardview.widget.CardView
                        android:id="@+id/v10"
                        android:layout_width="144dp"
                        android:layout_height="96dp"
                        app:layout_constraintStart_toEndOf="@id/v8"
                        app:layout_constraintTop_toBottomOf="@id/v9"
                        style="@style/TempCardViewStyle.Bottom"
                />
                <androidx.cardview.widget.CardView
                        android:id="@+id/v11"
                        android:layout_width="144dp"
                        android:layout_height="96dp"
                        app:layout_constraintStart_toEndOf="@id/v9"
                        app:layout_constraintTop_toTopOf="parent"
                        style="@style/TempCardViewStyle.Top"
                />
                <androidx.cardview.widget.CardView
                        android:id="@+id/v12"
                        android:layout_width="144dp"
                        android:layout_height="96dp"
                        app:layout_constraintStart_toEndOf="@id/v10"
                        app:layout_constraintTop_toBottomOf="@id/v11"
                        style="@style/TempCardViewStyle.Bottom"
                />
                <androidx.cardview.widget.CardView
                        android:id="@+id/v13"
                        android:layout_width="144dp"
                        android:layout_height="96dp"
                        app:layout_constraintStart_toEndOf="@id/v11"
                        app:layout_constraintTop_toTopOf="parent"
                        style="@style/TempCardViewStyle.Top"
                />
                <androidx.cardview.widget.CardView
                        android:id="@+id/v14"
                        android:layout_width="144dp"
                        android:layout_height="96dp"
                        app:layout_constraintStart_toEndOf="@id/v12"
                        app:layout_constraintTop_toBottomOf="@id/v13"
                        style="@style/TempCardViewStyle.Bottom"
                />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </HorizontalScrollView>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hint_project_team"
                android:textSize="14sp"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:lastBaselineToBottomHeight="20dp"
                android:textColor="@color/color_selector_hint"
                app:layout_constraintStart_toStartOf="@id/users_scroll_view"
                app:layout_constraintTop_toTopOf="@id/users_scroll_view"
        />

        <TextView
                android:id="@+id/project_edit_helper_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/helper_required"
                android:textColor="@color/indigo.100"
                android:layout_marginEnd="@dimen/sv_margin"
                android:layout_marginRight="@dimen/sv_margin"
                app:layout_constraintTop_toBottomOf="@id/users_scroll_view"
                app:layout_constraintEnd_toEndOf="parent"
        />

        <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_cancel_add_project"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_path_add"
                android:drawableStart="@drawable/icon_path_add"
                android:text="@string/btn_cancel"
                android:layout_marginLeft="@dimen/sv_margin"
                android:layout_marginStart="@dimen/sv_margin"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@id/project_edit_helper_text"
                app:layout_constraintEnd_toEndOf="parent"
                style="@style/Widget.MaterialComponents.Button.TextButton"
        />

        <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_add_project"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/action_add"
                android:layout_marginRight="@dimen/sv_margin"
                android:layout_marginEnd="@dimen/sv_margin"
                android:layout_marginTop="32dp"
                app:layout_constraintEnd_toStartOf="@id/btn_cancel_add_project"
                app:layout_constraintTop_toBottomOf="@id/project_edit_helper_text"
                app:icon="@drawable/icon_path_add"
                app:strokeColor="@color/color_selector_outline"
                app:strokeWidth="0dp"
                style="@style/Widget.MaterialComponents.Button"
        />

        <View
                android:id="@+id/project_edit_bottom_spacer"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_marginTop="0dp"
                app:layout_constraintTop_toBottomOf="@id/btn_cancel_add_project"
                />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>