<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/login_container"
>

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/app_logo_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/skull"
            android:layout_marginTop="@dimen/sign_in_logo_top_margin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
    />

    <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/user_name_edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icon_path_user_outline"
            android:drawableStart="@drawable/icon_path_user_outline"
            android:layout_marginLeft="48dp"
            android:layout_marginStart="48dp"
            android:layout_marginRight="48dp"
            android:layout_marginEnd="48dp"
            android:layout_marginTop="@dimen/sign_in_user_name_top_margin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/app_logo_image"
            style="@style/LoginEditText"
            tools:text="johanna.glied@49er.org"/>

    <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/user_password_edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icon_path_lock"
            android:drawableStart="@drawable/icon_path_lock"
            android:layout_marginTop="8dp"
            android:imeOptions="actionDone"
            app:layout_constraintStart_toStartOf="@id/user_name_edit_text"
            app:layout_constraintEnd_toEndOf="@id/user_name_edit_text"
            app:layout_constraintTop_toBottomOf="@id/user_name_edit_text"
            style="@style/LoginEditText.Password"
            tools:text="•••••••••••"
    />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/login_floating_button"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginTop="36dp"
            android:gravity="center"
            android:backgroundTint="@color/pureWhite"
            android:background="@color/pureWhite"
            android:text="@string/login_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/user_password_edit_text"
    />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/error_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:alpha="0"
            app:layout_constraintStart_toStartOf="@id/login_floating_button"
            app:layout_constraintEnd_toEndOf="@id/login_floating_button"
            app:layout_constraintTop_toBottomOf="@id/login_floating_button"
            app:layout_constraintBottom_toTopOf="@+id/tac_text"
            tools:text="@string/login_failed_bad_u_p"
    />

    <androidx.core.widget.ContentLoadingProgressBar
            android:id="@+id/progress_circular"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:indeterminate="true"
            android:indeterminateTint="@color/pureWhite"
            android:indeterminateDuration="100"
            android:indeterminateBehavior="repeat"
            android:background="@android:color/transparent"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@id/login_floating_button"
            app:layout_constraintEnd_toEndOf="@id/login_floating_button"
            app:layout_constraintTop_toTopOf="@id/login_floating_button"
            app:layout_constraintBottom_toBottomOf="@id/login_floating_button"
            style="?android:attr/progressBarStyleLarge"
    />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tac_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp"
            android:textColor="@color/indigo.100"
            android:text="@string/terms_and_conditions"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
    />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/pp_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:textColor="@color/indigo.100"
            android:text="@string/privacy_policy"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
    />

</androidx.constraintlayout.widget.ConstraintLayout>