<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/user_edit_container"
        android:background="@color/semitransparent_black_left"
        android:elevation="10dp"
>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background_date_picker_white"
            tools:layout_marginTop="24dp"
            tools:layout_marginBottom="24dp"
            tools:layout_height="match_parent"
            tools:layout_width="match_parent"
    >
        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_edit_users_title"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:gravity="center"
                android:background="@color/indigo_100_blacked_transparent2"
                android:textColor="@color/pureWhite"
                android:paddingTop="@dimen/sv_margin"
                android:paddingBottom="@dimen/sv_margin"
                android:layout_marginTop="@dimen/_list_item_invisible_margin"
                android:layout_marginLeft="@dimen/_list_item_invisible_margin"
                android:layout_marginRight="@dimen/_list_item_invisible_margin"
                android:layout_marginStart="@dimen/_list_item_invisible_margin"
                android:layout_marginEnd="@dimen/_list_item_invisible_margin"
                android:text="@string/title_edit_users"
                tools:text="@string/title_edit_users"
        />

        <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btn_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/icon_path_search"
                app:layout_constraintTop_toTopOf="@id/tv_edit_users_title"
                app:layout_constraintEnd_toEndOf="@id/tv_edit_users_title"
                app:layout_constraintBottom_toBottomOf="@id/tv_edit_users_title"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        />

        <FrameLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_edit_users_title"
                app:layout_constraintBottom_toTopOf="@+id/tv_users_selection_helper"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="@dimen/_list_item_invisible_margin"
                android:layout_marginRight="@dimen/_list_item_invisible_margin"
                android:layout_marginStart="@dimen/_list_item_invisible_margin"
                android:layout_marginEnd="@dimen/_list_item_invisible_margin"
                android:id="@+id/user_list_container">

            <include layout="@layout/fragment_user_list"
                     android:layout_gravity="center"
                     android:id="@+id/rv_users_list"
                     android:layout_height="match_parent"
                     android:layout_width="wrap_content"
            />

            <include layout="@layout/layout_search"
                     android:id="@+id/search_container"
                     android:layout_width="match_parent"
                     android:layout_height="@dimen/users_list_search_height"
                     android:layout_marginTop="2dp"
                     android:layout_marginLeft="8dp"
                     android:layout_marginRight="8dp"
                     android:layout_marginStart="8dp"
                     android:layout_marginEnd="8dp"
            />

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_small_users_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:layout_marginLeft="32dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginRight="32dp"
                    android:layout_marginEnd="32dp"
                    android:layout_marginBottom="@dimen/_list_item_invisible_margin"
                    android:background="@drawable/background_snackbar"
                    tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:orientation="horizontal"
                    tools:listitem="@layout/item_user_small"
                    tools:itemCount="8"
            />
        </FrameLayout>


        <View android:layout_width="0dp"
              android:layout_height="0dp"
              android:id="@+id/background_edit_user_list"
              app:layout_constraintStart_toStartOf="@id/user_list_container"
              app:layout_constraintEnd_toEndOf="@id/user_list_container"
              app:layout_constraintTop_toTopOf="@id/user_list_container"
              app:layout_constraintBottom_toBottomOf="@id/user_list_container"
              android:background="@drawable/background_simple_outline"
        />

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_users_selection_helper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/indigo.100"
                android:textSize="@dimen/list_item_secondary_text_size"
                android:text="@string/helper_users_selection"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintBottom_toTopOf="@+id/btn_add_users"
                app:layout_constraintEnd_toEndOf="@+id/btn_cancel_users"
        />

        <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_cancel_users"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_cancel"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/btn_add_users"
                app:layout_constraintTop_toTopOf="@+id/btn_add_users"/>

        <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_add_users"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/action_save"
                android:layout_marginRight="@dimen/sv_margin"
                android:layout_marginEnd="@dimen/sv_margin"
                app:layout_constraintEnd_toStartOf="@id/btn_cancel_users"
                app:layout_constraintBottom_toBottomOf="parent"
                app:icon="@drawable/icon_path_done"
                app:strokeColor="@color/color_selector_outline"
                app:strokeWidth="0dp"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_marginBottom="16dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
