<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/container_main_login"
>
    <include
            layout="@layout/content_layout_landing"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/tac_pp"
    />

    <fragment
            android:id="@+id/tac_pp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:name="org.rares.miner49er.ui.fragments.login.simple.TacPpFragment"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:context="org.rares.miner49er.ui.fragments.login.simple.TacPpFragment"
            tools:layout="@layout/fragment_tac_pp"
    />

</androidx.constraintlayout.widget.ConstraintLayout>