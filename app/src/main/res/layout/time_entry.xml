<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/top_container"
              android:layout_width="match_parent"
              android:layout_height="@dimen/projects_list_item_height"
              android:orientation="horizontal"
              android:gravity="center|start"
>
    <TextView
            android:id="@+id/user_initials_tv"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            android:background="@drawable/circle_semitransparent_background"
            android:textSize="16sp"
            android:textColor="@color/pureWhite"
            android:gravity="center"
    />
    <LinearLayout
            android:id="@+id/hours_day_container"
            android:layout_width="wrap_content"
            android:minWidth="60dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp">
        <TextView
                android:id="@+id/hours_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
        />
        <View
                android:id="@+id/hours_day_separator"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/android_color_dim_foreground_light_disabled"
        />
        <TextView
                android:id="@+id/day_tv"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
