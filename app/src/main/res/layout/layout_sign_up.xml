<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/signup_container"
>
    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="@dimen/sign_up_user_image_top_margin"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintDimensionRatio="w,1:1"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/pureWhite"
            app:civ_border_overlay="true"
            app:civ_circle_background_color="@color/indigo_100_blacked"
            tools:src="@tools:sample/avatars"
    />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/user_image_hint_text"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/circle_semitransparent_background"
            android:gravity="center"
            android:text="@string/hint_add_image"
            app:layout_constraintTop_toTopOf="@id/user_image"
            app:layout_constraintStart_toStartOf="@id/user_image"
            app:layout_constraintEnd_toEndOf="@id/user_image"
            tools:alpha="1"
    />

    <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/user_name_edit_text"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sign_in_user_name_top_margin"
            android:drawableLeft="@drawable/icon_path_user_outline"
            android:drawableStart="@drawable/icon_path_user_outline"
            android:drawablePadding="8dp"
            android:textColor="@color/indigo.100"
            android:maxLines="1"
            android:inputType="text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/user_image"
            tools:text="Johanna Glied"
    />

    <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/user_email_edit_text"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:drawableLeft="@drawable/icon_path_mail"
            android:drawableStart="@drawable/icon_path_mail"
            android:drawablePadding="8dp"
            android:textColor="@color/indigo.100"
            android:maxLines="1"
            android:inputType="text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/user_name_edit_text"
            tools:text="johanna.glied@49er.org"
    />

    <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/user_password_edit_text"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:inputType="textPassword"
            android:drawableLeft="@drawable/icon_path_lock"
            android:drawableStart="@drawable/icon_path_lock"
            android:drawableRight="@drawable/icon_path_eye"
            android:drawableEnd="@drawable/icon_path_eye"
            android:drawablePadding="8dp"
            android:textColor="@color/indigo.100"
            android:maxLines="1"
            android:imeOptions="actionDone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/user_email_edit_text"
            tools:text="•••••••••••"
    />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/create_account_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            app:iconPadding="0dp"
            android:backgroundTint="@color/pureWhite"
            android:background="@color/pureWhite"
            android:text="@string/create_account_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/user_password_edit_text"
            tools:backgroundTint="@color/pureWhite"
    />


    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/error_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:alpha="0"
            app:layout_constraintStart_toStartOf="@id/create_account_btn"
            app:layout_constraintEnd_toEndOf="@id/create_account_btn"
            app:layout_constraintTop_toBottomOf="@id/create_account_btn"
            app:layout_constraintBottom_toTopOf="@+id/tac_pp"
            tools:text="@string/create_user_failed_user_exists"
    />

    <androidx.core.widget.ContentLoadingProgressBar
            android:id="@+id/progress_circular"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:indeterminate="true"
            android:indeterminateTint="?colorOnPrimary"
            android:indeterminateDuration="100"
            android:indeterminateBehavior="repeat"
            android:background="@android:color/transparent"
            android:visibility="gone"
            android:elevation="10dp"
            app:layout_constraintStart_toStartOf="@id/create_account_btn"
            app:layout_constraintEnd_toEndOf="@id/create_account_btn"
            app:layout_constraintTop_toTopOf="@id/create_account_btn"
            app:layout_constraintBottom_toBottomOf="@id/create_account_btn"
            style="?android:attr/progressBarStyleLarge"
    />

    <fragment
            android:id="@+id/tac_pp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:name="org.rares.miner49er.ui.fragments.login.TacPpFragment"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:context="org.rares.miner49er.ui.fragments.login.TacPpFragment"
            tools:layout="@layout/fragment_tac_pp"
    />

</androidx.constraintlayout.widget.ConstraintLayout>