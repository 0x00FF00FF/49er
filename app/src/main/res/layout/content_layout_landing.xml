<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
>
    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/welcome_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/welcome"
            android:textSize="54sp"
            android:layout_marginTop="100dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
    />

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/app_logo_image"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_marginTop="36dp"
            android:src="@drawable/skull"
            app:layout_constraintTop_toBottomOf="@id/welcome_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
    />

    <androidx.constraintlayout.widget.Guideline
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/guideline_vertical_middle"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5"
    />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/sign_up_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:paddingStart="0dp"
            android:paddingEnd="0dp"
            app:iconPadding="0dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:backgroundTint="@color/pureWhite"
            android:background="@color/pureWhite"
            android:text="@string/sign_up"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/app_logo_image"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/guideline_vertical_middle"
    />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/sign_in_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/landing_button_margin"
            android:layout_marginRight="@dimen/landing_button_margin"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:paddingStart="0dp"
            android:paddingEnd="0dp"
            app:iconPadding="0dp"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:backgroundTint="@color/pureWhite"
            android:background="@color/pureWhite"
            android:text="@string/sign_in"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/app_logo_image"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/guideline_vertical_middle"
    />


    <!--signup-->
    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="@dimen/sign_up_user_image_top_margin"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintDimensionRatio="w,1:1"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/pureWhite"
            app:civ_border_overlay="true"
            app:civ_circle_background_color="@color/indigo_100_blacked"
            tools:src="@tools:sample/avatars"
    />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/user_image_hint_text"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/circle_semitransparent_background"
            android:gravity="center"
            android:text="@string/hint_add_image"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="@id/user_image"
            app:layout_constraintStart_toStartOf="@id/user_image"
            app:layout_constraintEnd_toEndOf="@id/user_image"
    />

    <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/user_name_edit_text"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sign_in_user_name_top_margin"
            android:drawableLeft="@drawable/icon_path_user_outline"
            android:drawableStart="@drawable/icon_path_user_outline"
            android:drawablePadding="8dp"
            android:textColor="@color/indigo.100"
            android:maxLines="1"
            android:inputType="textPersonName"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/user_image"
            tools:text="Johanna Glied"
    />

    <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/user_email_edit_text"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:drawableLeft="@drawable/icon_path_mail"
            android:drawableStart="@drawable/icon_path_mail"
            android:drawablePadding="8dp"
            android:textColor="@color/indigo.100"
            android:maxLines="1"
            android:inputType="textEmailAddress"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/user_name_edit_text"
            tools:text="johanna.glied@49er.org"
    />

    <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/user_password_edit_text"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:inputType="textPassword"
            android:drawableLeft="@drawable/icon_path_lock"
            android:drawableStart="@drawable/icon_path_lock"
            android:drawableRight="@drawable/icon_path_eye"
            android:drawableEnd="@drawable/icon_path_eye"
            android:drawablePadding="8dp"
            android:textColor="@color/indigo.100"
            android:maxLines="1"
            android:imeOptions="actionDone"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/user_email_edit_text"
            tools:text="•••••••••••"
    />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/create_account_btn"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:gravity="center"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            app:iconPadding="0dp"
            android:backgroundTint="@color/pureWhite"
            android:background="@color/pureWhite"
            android:text="@string/create_account_text"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/user_password_edit_text"
            tools:backgroundTint="@color/pureWhite"
    />


    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/error_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:alpha="0"
            app:layout_constraintStart_toStartOf="@id/create_account_btn"
            app:layout_constraintEnd_toEndOf="@id/create_account_btn"
            app:layout_constraintTop_toBottomOf="@id/create_account_btn"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="@string/create_user_failed_user_exists"
    />

    <androidx.core.widget.ContentLoadingProgressBar
            android:id="@+id/progress_circular"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:indeterminate="true"
            android:indeterminateTint="?colorOnPrimary"
            android:indeterminateDuration="100"
            android:indeterminateBehavior="repeat"
            android:background="@android:color/transparent"
            android:visibility="gone"
            android:elevation="10dp"
            app:layout_constraintStart_toStartOf="@id/create_account_btn"
            app:layout_constraintEnd_toEndOf="@id/create_account_btn"
            app:layout_constraintTop_toTopOf="@id/create_account_btn"
            app:layout_constraintBottom_toBottomOf="@id/create_account_btn"
            style="?android:attr/progressBarStyleLarge"
    />

    <!--signin-->

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/login_floating_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:gravity="center"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            app:iconPadding="0dp"
            android:backgroundTint="@color/pureWhite"
            android:background="@color/pureWhite"
            android:textColor="@color/color_selector_efab_text"
            android:text="@string/login_text"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/user_password_edit_text"
    />

</androidx.constraintlayout.widget.ConstraintLayout>